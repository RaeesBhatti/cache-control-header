{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Node",
    "target": "es2016",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ES2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist/types"
  },
  "ts-node": {
    "compilerOptions": {
        "module": "commonjs",
    },
  }
}
